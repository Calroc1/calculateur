{% extends 'back/base.html.twig' %}

{% block title %}Entreprises{% endblock %}

{% block body %}
    <h1 class="text-3xl text-black pb-6">Entreprises</h1>
    <div class="my-5 border rounded bg-white shadow">
        <div class="grid grid-cols-2 px-3 py-3 border-b">
            <div></div>
            <div class="text-right">
                <a href="{{ path('back_organism_add') }}" class="align-middle px-5 py-2 text-sm rounded-full font-semibold text-white border border-radius-10 bg-cyan-500 hover:bg-cyan-600">Ajouter une entreprise</a>    
            </div>
        </div>
        <div class="px-6 py-3">
            <table class="mt-3 w-full border-collapse">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="border p-3">Nom</th>
                        <th class="border p-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for organism in organisms %}
                        <tr>
                            <td class="border p-3">
                                {{ organism.name }}
                            </td>
                            <td class="border p-3">
                                <a href="{{ path('back_organism_detail', { 'organism' : organism.id }) }}" class="align-middle px-5 py-2 text-sm rounded-full font-semibold text-white border border-radius-10 bg-cyan-500 hover:bg-cyan-600">Editer</a>    
                                <a href="{{ path('back_organism_delete', { 'organism' : organism.id }) }}" class="align-middle px-5 py-2 text-sm rounded-full font-semibold text-white border border-radius-10 bg-red hover:bg-red">Supprimer</a>
                            </td>
                        </tr>                        
                    {% endfor %}    
                  </tbody>
            </table>
        </div>
    </div>    
{% endblock %}