{% extends 'back/base.html.twig' %}

{% block title %}Administrateurs{% endblock %}

{% block body %}
    <h1 class="text-3xl text-black pb-6">Administrateurs</h1>
    <div class="my-5 border rounded bg-white shadow">
        <div class="grid grid-cols-2 px-3 py-3 border-b">
            <div></div>
            <div class="text-right">
                <a href="{{ path('back_admin_add') }}" class="align-middle px-5 py-2 text-sm rounded-full font-semibold text-white border border-radius-10 bg-cyan-500 hover:bg-cyan-600">Ajouter un administrateur</a>    
            </div>
        </div>
        <div class="px-6 py-3">
            <table class="mt-3 w-full border-collapse">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="border p-3">Email</th>
                        <th class="border p-3">Nom</th>
                        <th class="border p-3">PrÃ©nom</th>
                        <th class="border p-3">Superadmin ?</th>
                        <th class="border p-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for admin in admins %}
                        <tr>
                            <td class="border p-3">
                                {{ admin.email }}
                            </td>
                            <td class="border p-3">
                                {{ admin.firstname }}
                            </td>
                            <td class="border p-3">
                                {{ admin.lastname }}
                            </td>
                            <td class="border p-3">
                                {{ admin.super ? 'Oui' : 'Non' }}
                            </td>
                            <td class="border p-3">
                                <a href="{{ path('back_admin_update', { 'admin' : admin.id }) }}" class="align-middle px-5 py-2 text-sm rounded-full font-semibold text-white border border-radius-10 bg-cyan-500 hover:bg-cyan-600">Editer</a>    
                                <a href="{{ path('back_admin_delete', { 'admin' : admin.id }) }}" class="align-middle px-5 py-2 text-sm rounded-full font-semibold text-white border border-radius-10 bg-red hover:bg-red">Supprimer</a>
                            </td>
                        </tr>                        
                    {% endfor %}    
                  </tbody>
            </table>
        </div>
    </div>    
{% endblock %}