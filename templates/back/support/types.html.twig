{% extends 'back/base.html.twig' %}

{% block title %}Formulaires > Types de support{% endblock %}

{% block body %}
    <h1 class="text-3xl text-black pb-6">Formulaires > Types de support</h1>
    <div class="my-5 border rounded bg-white shadow">
        <div class="px-6 py-8 border-b">
            <h3>Ajouter un type</h3>
            {% include 'back/support/_form.type.html.twig' with { 'form' : formAdd } %}    
        </div>
        <div class="px-6 py-3">
            <table class="mt-3 w-full border-collapse">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="border p-3">Nom</th>
                        <th class="border p-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for type in types %}
                        <tr>
                            <td class="border p-3">
                                {{ type.name }}
                            </td>
                            <td class="border p-3">
                                <a href="{{ path('back_support_type_update', { 'type' : type.id }) }}" class="align-middle px-5 py-2 text-xs rounded-full font-semibold text-white border border-radius-10 bg-cyan-500 hover:bg-cyan-600">Editer</a>
                                <a href="{{ path('back_support_type_delete', { 'type' : type.id }) }}" class="align-middle px-5 py-2 text-xs rounded-full font-semibold text-white border border-radius-10 bg-red hover:bg-red">Supprimer</a>
                            </td>
                        </tr>                        
                    {% endfor %}    
                  </tbody>
            </table>
        </div>
    </div>
{% endblock %}